<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="chatBox" prefHeight="439.0" prefWidth="537.0" stylesheets="@grey_theme.css" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <ListView fx:id="listviewChat" prefHeight="338.0" prefWidth="527.0">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin></ListView>
        <HBox prefHeight="79.0" prefWidth="400.0">
            <children>
            <Button mnemonicParsing="false" prefHeight="41.0" prefWidth="54.0" translateX="2.0" translateY="15.0">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="20.0" layoutX="369.0" layoutY="119.0" opacity="0.8" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/img/image.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
                <TextField fx:id="txtFieldMsg" prefHeight="71.0" prefWidth="279.0" promptText="Type a Message " translateX="8.0">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" top="5.0" />
                    </HBox.margin>
                </TextField>
            <Button mnemonicParsing="false" onAction="#sendmsg" translateX="13.0" translateY="10.0">
               <graphic>
                  <ImageView fitHeight="41.0" fitWidth="81.0" layoutX="369.0" layoutY="119.0" opacity="0.8" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/img/sendm.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            </children>
        </HBox>
    </children>
</VBox>
